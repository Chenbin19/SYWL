page{
  height: auto;
  background: #F8F6F6
}

.header{
  margin: 2px 0 15px;
  width: 100%;
  height: 400rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center
}

.img{
  width: 160rpx;
  height: 160rpx;
  margin: 40rpx 0 28rpx;
  border-radius: 50%;
  background: #DB1313
}

.user{
  font-size: 16px;
  color: #222222;
  margin-bottom: 40rpx
}

.header1{
  width: 456rpx;
  /* height: 72rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center
}

.nav{
  display: flex;
  flex-direction: column;
  font-size: 14px;
  align-items: center
}

.nav1{
  color: #FE585A;
  margin-bottom: 5px;
}

.nav2{
  color: #222222
}

.divider{
  width: 1px;
  height: 28px;
  background: #CFCFCF
}

.middle{
  width: 100%;
  height: 500rpx;
}

.title{
  background: #FFFFFF;
  width: 93%;
  height: 100rpx;
  margin-bottom: 1px;
  padding: 0 15px;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.title1{
  display: flex;
  align-items: center
}

.img1{
  width: 30px;
  height: 30px;
  margin-right: 14px;
}

.img2{
  width: 9px;
  height: 15px;
}